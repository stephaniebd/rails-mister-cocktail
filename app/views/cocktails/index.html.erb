<div class="background-left">

</div>

<div id="container" class="d-flex">

  <div class="background-right">

    <div class="links">
      <p id="link-style" class="text-right text-decoration-none" ><%= link_to "Add a cocktail", new_cocktail_path %></p>

      <div class="cocktail-container">
        <ul class="text-right">
          <% @cocktails.each do |cocktail| %>
              <div class="cocktail-name">
                <li ><%= link_to cocktail.name.upcase, cocktail_path(cocktail) %></li>
              </div>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="container-content">
      <div class="color-block-content">
        <h1>TIME<br> FOR<br> A<br> DRINK</h1>
      </div>
    </div>

    <div class="color-block-image">
      <%= cl_image_tag "vi7orrhi5axfozzk5iaj", width: 520, height: 250, crop: :fill, alt: "drinks"%>
    </div>

  </div>

</div>











