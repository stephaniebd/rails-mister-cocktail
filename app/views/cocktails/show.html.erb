<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %></li>
    <%= link_to "Delete", dose_path(dose), method: :delete %>
  <% end %>
</ul>

<p><%= link_to "Back", cocktails_path %></p>
<p><%= link_to "Add doses", new_cocktail_dose_path(@cocktail) %></p>
