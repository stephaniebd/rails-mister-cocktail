<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %> <i class="fas fa-trash"><%= link_to "", dose_path(dose), method: :delete %></i></li>

  <% end %>
</ul>


<p><%= link_to "Add doses", new_cocktail_dose_path(@cocktail) %></p>
<p><%= link_to "Back", cocktails_path %></p>
